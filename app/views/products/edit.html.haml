.container
  = form_with model: [@supplier,@product], url: { action: :update }, local: true do |f| 
    = f.label :商品名
    = f.text_field :name, class: "form-control "
    = f.label :商品価格（円）
    = f.text_field :price, class: "form-control"
    = f.label :発注単位
    = f.text_field :unit, class: "form-control"
    .col{ style: "margin: 1%"}
      = f.submit "編集する", class: "btn btn-primary" 