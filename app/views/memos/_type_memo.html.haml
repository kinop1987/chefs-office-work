.container
  .row.justify-content-center{ style: "margin: 5%"}
    .col.panel.panel-primary{ style: "width: 80vw"}
      = form_with model: @memo, locale: true do |f|
        .form-group.text-center
          %h2.col.center-block{ style: "margin: 1%"}
            = f.label :メモ帳, class: "text-primary"
          = f.text_area :memo, class: "form-control center-block", style: "width: 80%", size: "30x20"
        .form-group.text-center
          = f.submit "登録", class: 'btn btn-primary btn-lg '

