.container_fluid
  .row
    .col-6{ style: "margin: 20px"}
      .col-12.panel.panel-primary.center-block{ style: "width:50vw" }
        = form_with model: @supplier ,local: true do |f|
          %h2.text-center.text-primary
            お客様情報
          .form-group.text-center
            = f.label :名前, class: "text-primary"
            = f.text_field :name, class: "form-control center-block", style: "width: 50%", value: @supplier.name
          .form-group.text-center
            = f.label :メールアドレス, class: "text-primary"
            = f.email_field :email, class: "form-control center-block", style: "width: 50%", value: @supplier.email
          .form-group.text-center
            = f.label :電話番号, class: "text-primary"
            = f.text_field :telephone, class: "form-control center-block", style: "width: 50%", value: @supplier.telephone
          .form-group.text-center
            = f.label :ホームページ, class: "text-primary"
            = f.text_field :website ,class: "form-control center-block", style: "width: 50%",value: @supplier.website
          .form-group.text-center
            = f.label :担当者, class: "text-primary"
            = f.text_field :pic ,class: "form-control center-block", style: "width: 50%",value: @supplier.pic
          .form-group.text-center
            = f.submit "編集", class: 'btn btn-primary btn-lg '